pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                sh 'pytest test_app.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Simulating deployment...'
                sh 'echo "Deployed successfully!"'
            }
        }
    }
}

