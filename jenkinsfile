pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'pip install --break-system-packages -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest test_app.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Simulating deployment...'
                sh 'echo "Deployed successfully!"'
            }
        }
    }
}

